<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    android:layout_gravity="start">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/user_placeholder" />

        <TextView
            android:id="@+id/textView2"
            style="@style/textview"
            android:textAlignment="center"
            android:text="Dave Smith"
            android:textColor="@color/drawer_user_color"
            android:textSize="@dimen/font_xlarge" />

        <TextView
            style="@style/textview"
            android:textAlignment="center"
            android:text="Edit Profile"
            android:textSize="@dimen/font_medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNetworkView"
                style="@style/textview"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_networks"
                android:text="Network View" />

            <CheckBox
                android:id="@+id/cb_checkBoxNetworkView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/btn_online"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvJobHistory"
            style="@style/textview"
            android:layout_marginTop="@dimen/margin_medium"
            android:drawableLeft="@drawable/icon_job_normal"
            android:text="Job History" />

        <TextView
            android:id="@+id/tvEmergencyContacts"
            style="@style/textview"
            android:layout_marginTop="@dimen/margin_medium"
            android:drawableLeft="@drawable/icon_emergency_normal"
            android:text="Emergency Contacts" />

        <TextView
            android:id="@+id/tvHelp"
            style="@style/textview"
            android:layout_marginTop="@dimen/margin_medium"
            android:drawableLeft="@drawable/icon_help_normal"
            android:text="Help" />

        <TextView
            android:id="@+id/tvLogout"
            style="@style/textview"
            android:layout_marginTop="@dimen/margin_medium"
            android:drawableLeft="@drawable/icon_logout_normal"
            android:text="Logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Support via Call/Email"
            android:textSize="@dimen/font_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/icon_support_call_normal"
                android:padding="@dimen/padding_medium" />

            <CheckBox
                android:id="@+id/cb_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/icon_support_msg_normal"
                android:padding="@dimen/padding_medium" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>